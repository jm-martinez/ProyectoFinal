///Clase Galeria///

package collectionsythreads;

import java.util.ArrayList;

/**
 *
 * @author Juan Martinez
 */
public class Galeria {
    private ArrayList<Imagen> imagenes;

    public Galeria() {
        
        imagenes = new ArrayList<Imagen>();
        
        Imagen i1 = new Imagen();
        i1.setUrl("/collectionsythreads/untitled.fw.png");
        i1.setTitulo("CoD Advance Warfare");
        i1.setDescripcion("Este es un juego de tipo shooter creado por la"
                + "compañia Sledge Hammer.");
        
        Imagen i2 = new Imagen();
        i2.setUrl("/collectionsythreads/untitled1.fw.png");
        i2.setTitulo("Battlelfield 4");
        i2.setDescripcion("Es un juego de tipo shooter creado por la"
                + "compañia DICE.");
        
        Imagen i3 = new Imagen();
        i3.setUrl("/collectionsythreads/untitled3.fw.png");
        i3.setTitulo("HALO");
        i3.setDescripcion("Este es un juego de tipo shooter creado por la"
                + "compañia BUNGIE Y 343.");
        
        Imagen i4 = new Imagen();
        i4.setUrl("/collectionsythreads/untitled5.fw.png");
        i4.setTitulo("Gears of War");
        i4.setDescripcion("Es un juego de tipo shooter creado por la"
                + "compañia Epic Game.");
        
        Imagen i5 = new Imagen();
        i5.setUrl("/collectionsythreads/untitled4.fw.png");
        i5.setTitulo("GTA V");
        i5.setDescripcion("Este juego fue creado por la"
                + "compañia Rockstar.");
        
        //Agregar las imagenes al ArrayList.
        
        imagenes.add(i1);
        imagenes.add(i2);
        imagenes.add(i3);
        imagenes.add(i4);
        imagenes.add(i5);
        
                
    }

    public ArrayList<Imagen> leerTodas() {
        return imagenes;
    }

    public void setImagenes(ArrayList<Imagen> imagenes) {
        this.imagenes = imagenes;
    }
    
    
    
}

///Clase Imagen///

package collectionsythreads;

/**
 *
 * @author Juan Martinez
 */
public class Imagen {
    
    private String titulo;
    private String url;
    private String descripcion;

    public Imagen() {
    }

    public Imagen(String titulo, String url, String descripcion) {
        this.titulo = titulo;
        this.url = url;
        this.descripcion = descripcion;
    }

    public String getDescripcion() {
        return descripcion;
    }

    public void setDescripcion(String descripcion) {
        this.descripcion = descripcion;
    }

    public String getTitulo() {
        return titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public String getUrl() {
        return url;
    }

    public void setUrl(String url) {
        this.url = url;
    }
    
    
}

///Clase PersistenciaUsuario///

package collectionsythreads;

/**
 *
 * @author Juan Martinez
 */
import java.io.*;

public class PersistenciaUsuario {
   
    public void guardarUsuario(Usuario u) throws Exception{
        
        File f=new File("D:\\archivaldo.xxx");
        FileOutputStream fos=new FileOutputStream(f); 
        ObjectOutputStream oos=new ObjectOutputStream(fos);
        oos.writeObject(u); 
        System.out.println("Objeto usuario guardado");
        
    }
    
    public Usuario leerUsuario()throws Exception{
         File f=new File("D:\\archivaldo.xxx");
         FileInputStream fis=new FileInputStream(f);
         ObjectInputStream ois=new ObjectInputStream(fis);
         Usuario u=(Usuario)ois.readObject();
        System.out.println("Usuario recobrado");
    return u;
    }
    
}

///Clase ProbarPersistenciaUsuario///

package collectionsythreads;

/**
 *
 * @author Juan Martinez
 */
public class ProbarPersistenciaUsuario {
    
    public static void main(String[] args)throws Exception {
        
        Usuario u = new Usuario();
        u.setNombre("Panfilo");
        u.setEdad(42);
        u.setSueldo(20000); 
        PersistenciaUsuario p=new PersistenciaUsuario();
        p.guardarUsuario(u);
        
    }
}

///Clase Usuario///

package collectionsythreads;

/**
 *
 * @author Juan Martinez
 */
import java.io.*;
        
public class Usuario implements Serializable{
   //#2 
    private String nombre;
    private int edad;
    private float sueldo;

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getEdad() {
        return edad;
    }

    public void setEdad(int edad) {
        this.edad = edad;
    }

    public float getSueldo() {
        return sueldo;
    }

    public void setSueldo(float sueldo) {
        this.sueldo = sueldo;
    }
    
    
}

///Clase cargarImagen///

package collectionsythreads;

/**
 *
 * @author Juan Martinez
 */
public class cargarImagen {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) throws Exception {
        
        Imagen i = new Imagen();
        i.setTitulo(null);
        i.setDescripcion(null);
        i.setUrl(null);
        guardarImagen p = new guardarImagen();
        p.guardarImagen(i);
       
    }
    
}

///Clase guardarImagen///

package collectionsythreads;
import java.io.*;
/**
 *
 * @author Juan Martinez
 */
public class guardarImagen {
    public void guardarImagen(Imagen i)throws Exception{
        
        File f = new File("D:\\imagen.xxx");
        FileOutputStream fos = new FileOutputStream(f); 
        ObjectOutputStream oos = new ObjectOutputStream(fos);
        oos.writeObject(i); 
        System.out.println("Imagen guardada");
    
}
    
}

